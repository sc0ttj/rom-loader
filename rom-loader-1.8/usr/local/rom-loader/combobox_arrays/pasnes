
# FILTER combobox
FILTER_ARRAY=("Default" "SuperEagle" "2xSai" "Super2xSai" "HQ2x" "HQ3x" "HQ4x" "EPX-Smooth" "EPX" "NTSC" "Scanlines")
FILTER_ITEMS="<item>$FILTER</item>" #stored value should be first in list
for i in "${FILTER_ARRAY[@]}"
do
	if [ "$i" != "$FILTER" ];then
		FILTER_ITEMS=`echo "$FILTER_ITEMS<item>$i</item>"`
	fi
done

