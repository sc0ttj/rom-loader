# ZSNESGUI combobox
ZSNESGUI_ARRAY=(Default Yes No)
ZSNESGUI_ITEMS="<item>$ZSNESGUI</item>" #stored value should be first in list
for i in "${ZSNESGUI_ARRAY[@]}"
do
	if [ "$i" != "$ZSNESGUI" ];then
		ZSNESGUI_ITEMS=`echo "$ZSNESGUI_ITEMS<item>$i</item>"`
	fi
done

