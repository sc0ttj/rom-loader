MACHINE_ARRAY=(Default 800 1200 XL XE 5200)
MACHINE_ITEMS="<item>$MACHINE</item>" #stored value should be first in list
for i in "${MACHINE_ARRAY[@]}"
do
	if [ "$i" != "$MACHINE" ];then # if not already the selected value
		MACHINE_ITEMS=`echo "$MACHINE_ITEMS<item>$i</item>"` # add the value to the list
	fi
done

